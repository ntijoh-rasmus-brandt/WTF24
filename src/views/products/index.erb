<div id="product_page">
  <label for="tags">Select product tag:</label>
  <form id="tagsForm" action="/products/tags" method="post">
    <select name="tags" onchange="this.form.submit()">
      <option value="All">All</option>
      <% @tags.each do |tag| %>
          <option value="<%=tag['tag_name']%>"><%=tag['tag_name']%></option>
      <% end %>
    </select>
  </form>

<%= @product_ids.inspect %>

  <% @products.each do |product| %>
    <%if @product_ids.include?(product['id'])%>
      <div class="product">
        <a class = "product_link" href="/products/<%=product['id']%>">
        <img class="product_img"src="<%=product['image_path']%>" alt="<%=product['name']%>">
        <h2 class="product_text"><%= product['name'] %></h2>
        </a>
        <p class="product_text">Price: <%= product['price'] %></p>
      </div>
    <% end %>
  <% end %>
</div>