<div class="product">
    <img class="product_img"src="/<%=@product['image_path']%>" alt="<%=@product['name']%>">
    <h2><%= @product['name'] %></h2>
    <p><%= @product['description'] %></p>
    <p>Price: <%= @product['price'] %></p>
</div>

<a href="/products">Return To Homepage</a>
<a href="/products/<%=@product['id']%>/delete">Delete Product</a><br><br>

<form action="/products/review/<%=@product['id']%>" method='post'>
    Rating: <input type="number" min = "0" max = "5" name='rating'></input><br><br>
    Review: <input type="text" name='review'></input><br><br>
    <button type="submit">Comment</button>
</form><br><br>

<% @reviews.each do |review| %>
    <div class="review">
        <h2>Rating:<%=review['rating']%>/5</h2>
        <p><%=review['review']%></p>
    </div>
<% end %>