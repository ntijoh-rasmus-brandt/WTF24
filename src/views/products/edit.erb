<h1>Product</h1>
<form action="/products/<%=@product['id']%>/update" method='post' enctype="multipart/form-data">
    Name: <input type="text" name='name' value ="<%=@product['name']%>"></input> <br> <br>
    Description: <input type="text" name='description' value="<%=@product['description']%>"></input><br><br>
    Price: <input type="number" name='price' value =<%=@product['price']%>></input><br><br>
    Image: <input type="file" name='file' value ="<%=@product['image_path']%>"></input><br><br>
    <button type="submit">Update</button>
</form><br><br>

<h1>Tags</h1>
<h3>Delete Tags:</h3>
<ul>
    <% @product_tags.each do |tag| %>
        <li><p><%=tag['tag_name']%></p>
        <form action="/products/<%=@product['id']%>/edit/delete_tag/<%=tag['id']%>" method ='post'>
        <button type="submit">Delete</button>
        </form></li>
    <% end %>
</ul>

<h3>Add Tags:</h3>
<form action="/products/<%=@product['id']%>/update/tags">
    <select name="tags" onchange="this.form.submit()">
      <option disabled selected value> -- add a tag -- </option>
      <% @tags.each do |tag| %>
          <option value="<%=tag['tag_name']%>"><%=tag['tag_name']%></option>
      <% end %>
    </select>
</form>