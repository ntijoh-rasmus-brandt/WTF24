<h1>Product</h1>
<form action="/products/<%=@product['id']%>/update" method='post' enctype="multipart/form-data">
    Name: <input type="text" name='name' value ="<%=@product['name']%>"></input> <br> <br>
    Description: <input type="text" name='description' value="<%=@product['description']%>"></input><br><br>
    Price: <input type="number" name='price' value =<%=@product['price']%>></input><br><br>
    Image: <input type="file" name='file' value ="<%=@product['image_path']%>"></input><br><br>
    <button type="submit">Update</button>
</form><br><br>

<h1>Tags</h1>
<h3>Delete Tags:</h3>
<ul>
    <% @product_tags.each do |tag| %>
        <form action="/products/<%=@product['id']%>/update/delete_tag/<%=tag['tag_id']%>" method ='post'>
        <li><p><%=tag['tag_name']%></p>
        <button type="submit">Delete</button>
        </form></li>
    <% end %>
</ul>

<h3>Add Tags:</h3>
    <form action="/products/<%=@product['id']%>/update/add_tag" method = 'post' id="add_tag_form">
        <button type="submit">Add</button>
    </form>

    <label for="tags_select">Choose tag:</label>
    <select id= "tags_select" name="tag_select" form="add_tag_form">
      <option disabled selected value> -- choose a tag -- </option>
      <% @tags.each do |tag| %>
            <option value="<%=tag['id']%>"><%=tag['tag_name']%></option>
      <% end %>
    </select>

    <br>
    <br>


<a href="/products/tag/all">Return To Homepage</a>
